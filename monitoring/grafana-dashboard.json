{
  "dashboard": {
    "id": null,
    "title": "REST API Downloader - Production Monitoring",
    "tags": ["downloader", "api", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Score",
        "type": "stat",
        "targets": [
          {
            "expr": "downloader_gauge{name=\"health_score\"}",
            "legendFormat": "Health Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0,
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 60 },
                { "color": "green", "value": 80 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(downloader_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": { "mode": "palette-classic" }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(downloader_errors_total[5m]) / rate(downloader_requests_total[5m]) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 }
      },
      {
        "id": 4,
        "title": "Average Response Time",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(downloader_response_time_seconds_bucket[5m]))",
            "legendFormat": "P95 Response Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 3 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 }
      },
      {
        "id": 5,
        "title": "Request Volume Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(downloader_requests_total[1m])",
            "legendFormat": "Requests/sec"
          },
          {
            "expr": "rate(downloader_errors_total[1m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per second",
            "min": 0
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 6,
        "title": "Response Time Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(downloader_response_time_seconds_bucket[5m]))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.90, rate(downloader_response_time_seconds_bucket[5m]))",
            "legendFormat": "P90"
          },
          {
            "expr": "histogram_quantile(0.95, rate(downloader_response_time_seconds_bucket[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(downloader_response_time_seconds_bucket[5m]))",
            "legendFormat": "P99"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "min": 0
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 7,
        "title": "Concurrency Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "downloader_gauge{name=\"pdf_concurrency_utilization\"}",
            "legendFormat": "PDF Concurrency %"
          },
          {
            "expr": "downloader_gauge{name=\"batch_concurrency_utilization\"}",
            "legendFormat": "Batch Concurrency %"
          }
        ],
        "yAxes": [
          {
            "label": "Utilization %",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 17 }
      },
      {
        "id": 8,
        "title": "Connection Pool Status",
        "type": "graph",
        "targets": [
          {
            "expr": "downloader_gauge{name=\"redis_available_connections\"}",
            "legendFormat": "Redis Available"
          },
          {
            "expr": "downloader_gauge{name=\"redis_in_use_connections\"}",
            "legendFormat": "Redis In Use"
          }
        ],
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 17 }
      },
      {
        "id": 9,
        "title": "Status Code Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "downloader_requests_total",
            "legendFormat": "{{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": { "h": 9, "w": 8, "x": 0, "y": 26 }
      },
      {
        "id": 10,
        "title": "Endpoint Performance",
        "type": "table",
        "targets": [
          {
            "expr": "rate(downloader_requests_total[5m])",
            "legendFormat": "{{endpoint}} Requests/sec",
            "format": "table",
            "instant": true
          },
          {
            "expr": "histogram_quantile(0.95, rate(downloader_response_time_seconds_bucket[5m]))",
            "legendFormat": "{{endpoint}} P95 Response Time",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "table"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "P95 Response Time" },
              "properties": [
                { "id": "unit", "value": "s" }
              ]
            }
          ]
        },
        "gridPos": { "h": 9, "w": 16, "x": 8, "y": 26 }
      },
      {
        "id": 11,
        "title": "System Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "downloader_uptime_seconds",
            "legendFormat": "Uptime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "dtdurations",
            "color": { "mode": "value" }
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 35 }
      },
      {
        "id": 12,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "downloader_gauge{name=\"pdf_concurrency_active\"} + downloader_gauge{name=\"batch_concurrency_active\"}",
            "legendFormat": "Total Active"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "palette-classic" }
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 35 }
      },
      {
        "id": 13,
        "title": "Redis Status",
        "type": "stat",
        "targets": [
          {
            "expr": "downloader_gauge{name=\"redis_status\"}",
            "legendFormat": "Redis Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "mappings": [
              { "type": "value", "value": "0", "text": "DOWN" },
              { "type": "value", "value": "1", "text": "UP" }
            ],
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 35 }
      },
      {
        "id": 14,
        "title": "HTTP Client Status",
        "type": "stat",
        "targets": [
          {
            "expr": "downloader_gauge{name=\"http_client_status\"}",
            "legendFormat": "HTTP Client"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "mappings": [
              { "type": "value", "value": "0", "text": "DOWN" },
              { "type": "value", "value": "1", "text": "UP" }
            ],
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 35 }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s",
    "version": 1,
    "uid": "downloader-monitoring",
    "schemaVersion": 30
  }
}
